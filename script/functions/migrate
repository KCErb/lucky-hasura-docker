#!/bin/bash

# Spins up temporary lucky instance to talk to db and runs 'update-db' there.
# Then exec's into Hasura instance and updates metadata there.
function migrate {
  printf "\nâ–¸ Running update-db\n"
  docker run --rm --env-file ./Docker/lucky/migrations.env -e DATABASE_URL=postgres://$POSTGRES_USER:$POSTGRES_PASSWORD@postgres:5432/$POSTGRES_DB --net migrations registry.gitlab.com/GITLAB_USER/GITLAB_REPO_NAME/lucky:$LUCKY_TAG /data/script/docker/update-db -s | indent
}
